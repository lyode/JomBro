// Challenge data
const challenges = [
  { id: 1, title: 'Share Your Breakfast', points: 50, participants: 234, timeLeft: '2h 15m' },
  { id: 2, title: 'Weekend Adventure Photo', points: 100, participants: 156, timeLeft: '1d 8h' },

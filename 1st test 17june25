  const handleLike = (postId) => {
    setPosts(posts.map(post => 
      post.id === postId 
        ? { ...post, likes: post.likes + 1 }
        : post
    ));
  };

  // Image URLs for the posts (converted from your uploaded images)
  const imageUrls = {
    cycling: '/api/placeholder/600/400', // Cycling image placeholder
    studio: '/api/placeholder/600/400', // Studio DAMDA placeholder  
    mall: '/api/placeholder/600/400', // Shopping mall placeholder
    renovation: '/api/placeholder/600/400', // Renovation placeholder
    sushi: '/api/placeholder/600/400' // Sushi family placeholder
  };

  // Image handling and cropping functions
  const handleImageUpload = (event) => {
    const file = event.target.files[0];
    if (file && file.type.startsWith('image/')) {
      setSelectedImage(file);
      
      // Create preview
      const reader = new FileReader();
      reader.onload = (e) => {
        setImagePreview(e.target.result);
      };
      reader.readAsDataURL(file);
    }
  };

  const cropImage = (imageSrc, aspectRatio = 'auto') => {
    return new Promise((resolve) => {
      const img = new Image();
      img.onload = () => {
        const canvas = document.createElement('canvas');
        const ctx = canvas.getContext('2d');
        
        let { width, height } = img;
        let sx = 0, sy = 0, sw = width, sh = height;
        
        // Calculate crop dimensions based on aspect ratio
        if (aspectRatio === 'square') {
          const size = Math.min(width, height);
          canvas.width = 400;
          canvas.height = 400;
          sx = (width - size) / 2;
          sy = (height - size) / 2;
          sw = sh = size;
        } else if (aspectRatio === 'landscape') {
          const targetRatio = 16 / 9;
          if (width / height > targetRatio) {
            sw = height * targetRatio;
            sx = (width - sw) / 2;
          } else {
            sh = width / targetRatio;
            sy = (height - sh) / 2;
          }
          canvas.width = 500;
          canvas.height = 281; // 16:9 ratio
        } else if (aspectRatio === 'portrait') {
          const targetRatio = 4 / 5;
          if (width / height < targetRatio) {
            sh = width / targetRatio;
            sy = (height - sh) / 2;
          } else {
            sw = height * targetRatio;
            sx = (width - sw) / 2;
          }
          canvas.width = 400;
          canvas.height = 500; // 4:5 ratio
        } else {
          // Auto - maintain aspect ratio but limit max size
          const maxWidth = 500;
          const maxHeight = 500;
          
          if (width > height) {
            if (width > maxWidth) {
              height = (height * maxWidth) / width;
              width = maxWidth;
            }
          } else {
            if (height > maxHeight) {
              width = (width * maxHeight) / height;
              height = maxHeight;
            }
          }
          canvas.width = width;
          canvas.height = height;
        }
        
        // Draw cropped image
        ctx.drawImage(img, sx, sy, sw, sh, 0, 0, canvas.width, canvas.height);
        
        // Convert to blob
        canvas.toBlob(resolve, 'image/jpeg', cropSettings.quality);
      };
      img.src = imageSrc;
    });
  };

  const handleCreatePost = async () => {
    if (newPost.trim() || selectedImage) {
      let processedImage = null;
      
      if (selectedImage && imagePreview) {
        // Crop the image based on selected aspect ratio
        processedImage = await cropImage(imagePreview, cropSettings.aspectRatio);
        const imageUrl = URL.createObjectURL(processedImage);
        processedImage = imageUrl;
      }

      const post = {
        id: posts.length + 1,
        user: {
          name: user.name,
          avatar: user.avatar,
          verified: false
        },
        time: 'now',
        content: newPost,
        image: processedImage,
        likes: 0,
        comments: 0,
        shares: 0,
        privacy: 'public',
        reactions: []
      };
      setPosts([post, ...posts]);
      setNewPost('');
      setSelectedImage(null);
      setImagePreview(null);
      setShowPostModal(false);
    }
  };

  const StoryCard = ({ story }) => (

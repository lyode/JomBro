        'just joined a challenge!',
        'shared a new photo',
        'earned 25 points!',
        'completed a challenge',
        'liked your post'
      ];
      const randomActivity = activities[Math.floor(Math.random() * activities.length)];
      
      // Update points randomly for simulation
      setUsers(prevUsers => 
        prevUsers.map(user => 
          user.id === randomUser.id 
            ? { ...user, points: user.points + Math.floor(Math.random() * 20) }
            : user

                    <span className="text-gray-600">🎓</span>
                    <span className="text-gray-700">Studied at <strong>University Malaya</strong></span>
                  </div>
                  <div className="flex items-center space-x-3">
                    <span className="text-gray-600">💕</span>
                    <span className="text-gray-700"><strong>Single</strong></span>
                  </div>
                  <div className="flex items-center space-x-3">
                    <span className="text-gray-600">📱</span>
                    <span className="text-gray-700">Joined <strong>March 2020</strong></span>
                  </div>
                </div>
                <button className="w-full mt-4 bg-gray-100 text-gray-700 py-2 rounded-lg font-medium hover:bg-gray-200 transition-colors">
                  Edit Details
                </button>
              </div>

              {/* Photos */}
              <div className="bg-white rounded-xl shadow-sm border-2 border-gray-400 p-4">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-bold text-lg">Photos</h3>
                  <span className="text-blue-600 hover:underline cursor-pointer text-sm">See all photos</span>
                </div>
                <div className="grid grid-cols-3 gap-2">
                  <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=150&h=150&fit=crop" alt="Photo" className="rounded-lg object-cover w-full h-20" />
                  <img src="https://images.unsplash.com/photo-1560066984-138dadb4c035?w=150&h=150&fit=crop" alt="Photo" className="rounded-lg object-cover w-full h-20" />
                  <img src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=150&h=150&fit=crop" alt="Photo" className="rounded-lg object-cover w-full h-20" />
                  <img src="https://images.unsplash.com/photo-1581858726788-75bc0f6a952d?w=150&h=150&fit=crop" alt="Photo" className="rounded-lg object-cover w-full h-20" />
                  <img src="https://images.unsplash.com/photo-1579584425555-c3ce17fd4351?w=150&h=150&fit=crop" alt="Photo" className="rounded-lg object-cover w-full h-20" />
                  <img src="https://images.unsplash.com/photo-1501339847302-ac426a4a7cbb?w=150&h=150&fit=crop" alt="Photo" className="rounded-lg object-cover w-full h-20" />
                </div>
              </div>

              {/* Friends */}
              <div className="bg-white rounded-xl shadow-sm border-2 border-gray-400 p-4">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="font-bold text-lg">Kawan-kawan</h3>
                  <span className="text-blue-600 hover:underline cursor-pointer text-sm">See all friends</span>
                </div>
                <div className="text-gray-600 text-sm mb-3">5,678 friends</div>
                <div className="grid grid-cols-3 gap-2">
                  {[1,2,3,4,5,6].map(i => (
                    <div key={i} className="text-center">
                      <img src={`https://images.unsplash.com/photo-${1500000000 + i * 100000}?w=80&h=80&fit=crop&crop=face`} alt="Friend" className="rounded-lg object-cover w-full h-16 mb-1" />
                      <div className="text-xs text-gray-700">Friend {i}</div>
                    </div>
                  ))}
                </div>
              </div>
            </div>

            {/* Center Content - Posts */}
            <div className="lg:col-span-2 space-y-4">
              {/* Create Post */}
              <CreatePost />
              
              {/* User's Posts */}
              {posts.slice(0, 3).map(post => (
                <PostCard key={post.id} post={post} />
              ))}
            </div>
          </div>

          {/* Back Button */}
          <div className="mt-6 text-center">
            <button 
              onClick={() => setShowProfile(false)}
              className="bg-yellow-500 text-white px-6 py-3 rounded-lg font-medium hover:bg-yellow-600 transition-colors"
            >
              ← Back to Feed
            </button>
          </div>
        </div>
      );
    }

    switch (activeTab) {
      case 'home':
        return (
          <div className="max-w-2xl mx-auto">
            {/* Promotion Section */}
            <div className="bg-white rounded-xl shadow-sm border-2 border-gray-400 p-4 mb-4">
              <div className="bg-blue-500 rounded-lg p-6 text-center text-white">
                <h2 className="text-2xl font-bold mb-2">Promotion</h2>
                <p className="text-blue-100">Special offers and deals for JomBro members!</p>
              </div>
            </div>

            {/* Stories */}
            <div className="bg-white rounded-xl shadow-sm border-2 border-gray-400 p-3 mb-4">
              <div className="flex space-x-3 justify-between">
                {stories.map(story => (
                  <StoryCard key={story.id} story={story} />
                ))}
              </div>
            </div>

            {/* Create Post */}
            <CreatePost />

            {/* Posts Feed */}
            {posts.map(post => (
              <PostCard key={post.id} post={post} />
            ))}
          </div>
        );

      case 'friends':
        return (
          <div className="max-w-2xl mx-auto">
            <div className="bg-white rounded-xl shadow-sm border-2 border-gray-400 p-8 text-center">
              <Users className="w-16 h-16 text-yellow-500 mx-auto mb-4" />
              <h2 className="text-2xl font-bold text-gray-900 mb-2">Kawan-kawan</h2>
              <p className="text-gray-600">Cari dan connect dengan member baru!</p>
            </div>
          </div>
        );

      case 'messenger':
        return (
          <div className="max-w-2xl mx-auto">
            <div className="bg-white rounded-xl shadow-sm border-2 border-gray-400 p-8 text-center">
              <MessageSquare className="w-16 h-16 text-yellow-500 mx-auto mb-4" />
              <h2 className="text-2xl font-bold text-gray-900 mb-2">Chat Bro</h2>
              <p className="text-gray-600">Borak dengan kawan dan family</p>
            </div>
          </div>
        );

      default:
        return <div>Select a tab</div>;
    }
  };

  return (
    <div className="min-h-screen bg-gray-100">
      {/* Header */}
      <div className="bg-white shadow-sm border-b border-gray-200 sticky top-0 z-50">
        <div className="max-w-6xl mx-auto px-4 py-2">
          <div className="flex items-center justify-between">
            {/* Left - Logo & Search */}
            <div className="flex items-center space-x-4">
              <div className="flex items-center space-x-2">
                <h1 className="text-2xl font-bold text-yellow-600">JomBro</h1>
                <span className="text-sm text-gray-600 italic">"bro kang tau Lai liau!"</span>
              </div>
              <div className="relative hidden md:block">
                <Search className="w-5 h-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" />
                <input
                  type="text"
                  placeholder="Search JomBro"
                  className="bg-yellow-50 border border-yellow-200 rounded-full pl-10 pr-4 py-2 w-64 focus:outline-none focus:ring-2 focus:ring-yellow-500"
                />
              </div>
            </div>

            {/* Center - Navigation */}
            <div className="hidden md:flex items-center space-x-8">
              <button
                onClick={() => setActiveTab('home')}
                className={`p-3 rounded-lg transition-colors ${
                  activeTab === 'home' 
                    ? 'text-yellow-600 bg-yellow-50' 
                    : 'text-gray-600 hover:bg-yellow-50'
                }`}
              >
                <Home className="w-6 h-6" />
              </button>
              <button
                onClick={() => setActiveTab('friends')}
                className={`p-3 rounded-lg transition-colors ${
                  activeTab === 'friends' 
                    ? 'text-yellow-600 bg-yellow-50' 
                    : 'text-gray-600 hover:bg-yellow-50'
                }`}
              >
                <Users className="w-6 h-6" />
              </button>
              <button
                onClick={() => setActiveTab('messenger')}
                className={`p-3 rounded-lg transition-colors ${
                  activeTab === 'messenger' 
                    ? 'text-yellow-600 bg-yellow-50' 
                    : 'text-gray-600 hover:bg-yellow-50'
                }`}
              >
                <MessageSquare className="w-6 h-6" />
              </button>
            </div>

            {/* Right - User Actions */}
            <div className="flex items-center space-x-2">
              <button className="p-2 text-gray-600 hover:bg-yellow-50 rounded-full transition-colors">
                <Bell className="w-6 h-6" />
              </button>
              <button className="p-2 text-gray-600 hover:bg-yellow-50 rounded-full transition-colors">
                <MessageSquare className="w-6 h-6" />
              </button>
              <button className="p-2 text-gray-600 hover:bg-yellow-50 rounded-full transition-colors">
                <Menu className="w-6 h-6" />
              </button>
              <img 
                src={user.avatar} 
                alt={user.name}
                className="w-8 h-8 rounded-full object-cover cursor-pointer"
                onClick={() => setShowProfile(true)}
              />
            </div>
          </div>
        </div>
      </div>

      {/* Main Content */}
      <div className="max-w-6xl mx-auto px-4 py-6">
        {/* Image Upload Notice */}
        <div className="max-w-2xl mx-auto mb-4">
          <div className="bg-blue-50 border-2 border-blue-300 rounded-xl p-4">
            <div className="text-center mb-3">
              <h3 className="text-blue-700 font-bold text-lg">📸 Your Images Ready!</h3>
              <p className="text-blue-600">I've created posts based on your uploaded images:</p>
            </div>
            
            <div className="bg-white rounded-lg p-3 border border-blue-200">
              <div className="text-sm text-blue-800 space-y-1">
                <p>🚴‍♀️ <strong>Post 1:</strong> Your cycling/outdoor photo with helmet</p>
                <p>💇‍♀️ <strong>Post 2:</strong> Studio DAMDA salon interior</p>
                <p>🛒 <strong>Post 3:</strong> Shopping mall with R Pharmacy</p>
                <p>🏗️ <strong>Post 4:</strong> Home renovation progress</p>
                <p>🍣 <strong>Post 5:</strong> Family sushi with child & dog</p>
              </div>
              
              <div className="mt-3 pt-2 border-t border-blue-300">
                <p className="text-xs text-blue-600">
                  💡 <strong>Note:</strong> Placeholder images shown below. In a real app, your uploaded images would replace these automatically!
                </p>
              </div>
            </div>
          </div>
        </div>
        {/* Compound Warning */}
        <div className="max-w-2xl mx-auto mb-4">
          <div className="bg-red-50 border-2 border-red-300 rounded-xl p-4">
            <div className="text-center mb-3">
              <h3 className="text-red-700 font-bold text-lg">⚠️ WANTED LIST ⚠️</h3>
              <p className="text-red-600 font-semibold">You are wanted, pay compound now!</p>
            </div>
            
            <div className="bg-white rounded-lg p-3 border border-red-200">
              <div className="text-sm text-red-800">
                <p className="font-semibold mb-2">Outstanding Compounds:</p>
                <div className="space-y-2">
                  <div className="flex justify-between items-center bg-red-100 p-2 rounded">
                    <span>🚗 Parking Violation</span>
                    <span className="font-bold text-red-700">RM50</span>
                  </div>
                  <div className="flex justify-between items-center bg-red-100 p-2 rounded">
                    <span>📱 Late Payment Fee</span>
                    <span className="font-bold text-red-700">RM25</span>
                  </div>
                  <div className="flex justify-between items-center bg-red-100 p-2 rounded">
                    <span>⚡ Community Service</span>
                    <span className="font-bold text-red-700">2 Hours</span>
                  </div>
                </div>
                
                <div className="mt-3 pt-2 border-t border-red-300">
                  <div className="flex justify-between items-center">
                    <span className="font-bold">Total Amount:</span>
                    <span className="font-bold text-lg text-red-700">RM75</span>
                  </div>
                  <p className="text-xs text-red-600 mt-1">⏰ Deadline: 3 days remaining</p>
                </div>
                
                <button className="w-full mt-3 bg-red-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-red-700 transition-colors">
                  Pay Now / Settle Compound
                </button>
              </div>
            </div>
          </div>
        </div>
        
        {renderContent()}
      </div>

      {/* Mobile Navigation */}
      <div className="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200">
        <div className="flex items-center justify-around py-2">
          <button
            onClick={() => setActiveTab('home')}
            className={`p-3 ${activeTab === 'home' ? 'text-yellow-600' : 'text-gray-600'}`}
          >
            <Home className="w-6 h-6" />
          </button>
          <button
            onClick={() => setActiveTab('friends')}
            className={`p-3 ${activeTab === 'friends' ? 'text-yellow-600' : 'text-gray-600'}`}
          >
            <Users className="w-6 h-6" />
          </button>
          <button
            onClick={() => setActiveTab('messenger')}
            className={`p-3 ${activeTab === 'messenger' ? 'text-yellow-600' : 'text-gray-600'}`}
          >
            <MessageSquare className="w-6 h-6" />
          </button>
          <button className="p-3 text-gray-600">
            <Bell className="w-6 h-6" />
          </button>
          <button className="p-3 text-gray-600">
            <Menu className="w-6 h-6" />
          </button>
        </div>
      </div>

      {/* Create Post Modal */}
      {showPostModal && (
        <div className="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
          <div className="bg-white rounded-xl w-full max-w-lg max-h-[90vh] overflow-y-auto border-2 border-gray-400">
            <div className="p-4 border-b border-gray-200">
              <div className="flex items-center justify-between">
                <h2 className="text-lg font-semibold">Buat Post Baru</h2>
                <button 
                  onClick={() => {
                    setShowPostModal(false);
                    setSelectedImage(null);
                    setImagePreview(null);
                    setNewPost('');
                  }}
                  className="text-gray-500 hover:text-gray-700"
                >
                  ✕
                </button>
              </div>
            </div>
            <div className="p-4">
              <div className="flex items-center space-x-3 mb-4">
                <img 
                  src={user.avatar} 
                  alt={user.name}
                  className="w-10 h-10 rounded-full object-cover"
                />
                <div>
                  <h3 className="font-medium">{user.name}</h3>
                  <div className="flex items-center space-x-1 text-sm text-gray-600">
                    <Globe className="w-3 h-3" />
                    <span>Public</span>
                  </div>
                </div>
              </div>
              
              <textarea
                value={newPost}
                onChange={(e) => setNewPost(e.target.value)}
                placeholder={`Apa lu fikir sekarang, ${user.name.split(' ')[0]}? Share lah!`}
                className="w-full p-3 border border-yellow-300 rounded-lg resize-none focus:outline-none focus:ring-2 focus:ring-yellow-500 mb-4"
                rows="4"
              />

              <div className="mb-4">
                <h4 className="font-medium mb-2">Replace with Your Images:</h4>
                <label htmlFor="modal-photo-upload" className="block">
                  <div className="border-2 border-dashed border-yellow-300 rounded-lg p-6 text-center hover:border-yellow-500 transition-colors cursor-pointer">
                    <Camera className="w-8 h-8 text-yellow-500 mx-auto mb-2" />
                    <p className="text-gray-600">Upload Your Image</p>
                    <p className="text-sm text-gray-400">JPG, PNG, or drag and drop</p>
                  </div>
                </label>
                <input
                  id="modal-photo-upload"
                  type="file"
                  accept="image/*"
                  onChange={handleImageUpload}
                  className="hidden"
                />
              </div>

              {/* Image Preview & Crop Options */}
              {imagePreview && (
                <div className="mb-4">
                  <div className="flex items-center justify-between mb-2">
                    <h4 className="font-medium">Preview Gambar</h4>
                    <button
                      onClick={() => {
                        setSelectedImage(null);
                        setImagePreview(null);
                      }}
                      className="text-red-500 hover:text-red-700 text-sm"
                    >
                      Remove
                    </button>
                  </div>
                  
                  {/* Crop Ratio Selector */}
                  <div className="flex space-x-2 mb-3">
                    <button
                      onClick={() => setCropSettings({...cropSettings, aspectRatio: 'auto'})}
                      className={`px-3 py-1 rounded text-sm ${
                        cropSettings.aspectRatio === 'auto' 
                          ? 'bg-yellow-500 text-white' 
                          : 'bg-yellow-100 text-yellow-600'
                      }`}
                    >
                      Auto
                    </button>
                    <button
                      onClick={() => setCropSettings({...cropSettings, aspectRatio: 'square'})}
                      className={`px-3 py-1 rounded text-sm ${
                        cropSettings.aspectRatio === 'square' 
                          ? 'bg-yellow-500 text-white' 
                          : 'bg-yellow-100 text-yellow-600'
                      }`}
                    >
                      Square
                    </button>
                    <button
                      onClick={() => setCropSettings({...cropSettings, aspectRatio: 'landscape'})}
                      className={`px-3 py-1 rounded text-sm ${
                        cropSettings.aspectRatio === 'landscape' 
                          ? 'bg-yellow-500 text-white' 
                          : 'bg-yellow-100 text-yellow-600'
                      }`}
                    >
                      16:9
                    </button>
                    <button
                      onClick={() => setCropSettings({...cropSettings, aspectRatio: 'portrait'})}
                      className={`px-3 py-1 rounded text-sm ${
                        cropSettings.aspectRatio === 'portrait' 
                          ? 'bg-yellow-500 text-white' 
                          : 'bg-yellow-100 text-yellow-600'
                      }`}
                    >
                      4:5
                    </button>
                  </div>
                  
                  {/* Image Preview */}
                  <div className="border-2 border-gray-400 rounded-xl overflow-hidden">
                    <img 
                      src={imagePreview} 
                      alt="Preview"
                      className={`w-full object-cover ${
                        cropSettings.aspectRatio === 'square' ? 'aspect-square' :
                        cropSettings.aspectRatio === 'landscape' ? 'aspect-video' :
                        cropSettings.aspectRatio === 'portrait' ? 'aspect-[4/5]' :
                        'max-h-64'
                      }`}
                    />
                  </div>
                  
                  <p className="text-xs text-gray-500 mt-1">
                    {cropSettings.aspectRatio === 'auto' && 'Image will maintain original proportions (max 500px)'}
                    {cropSettings.aspectRatio === 'square' && 'Image will be cropped to square (400x400px)'}
                    {cropSettings.aspectRatio === 'landscape' && 'Image will be cropped to 16:9 landscape (500x281px)'}
                    {cropSettings.aspectRatio === 'portrait' && 'Image will be cropped to 4:5 portrait (400x500px)'}
                  </p>
                </div>
              )}

              <div className="flex justify-end space-x-2">
                <button 
                  onClick={() => {
                    setShowPostModal(false);
                    setSelectedImage(null);
                    setImagePreview(null);
                    setNewPost('');
                  }}
                  className="px-4 py-2 text-gray-600 hover:bg-yellow-50 rounded-lg transition-colors"
                >
                  Cancel
                </button>
                <button 
                  onClick={handleCreatePost}
                  disabled={!newPost.trim() && !selectedImage}
                  className="px-6 py-2 bg-yellow-500 text-white rounded-lg hover:bg-yellow-600 transition-colors font-medium disabled:bg-gray-300 disabled:cursor-not-allowed"
                >
                  Post Lah!
                </button>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default FacebookClone;

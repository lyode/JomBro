        // Search friend
        async function searchFriend() {
            const searchValue = document.getElementById('friendSearchInput').value.trim();
            const resultsDiv = document.getElementById('friendSearchResults');
            
            if (!searchValue) {
                showMessage('Please enter a username or friend code', 'error');
                return;
            }
            
            try {
                resultsDiv.innerHTML = '<div style="text-align: center;"><div class="loading-spinner"></div></div>';
                
                let userDoc;
                
                // Check if it's a friend code (8 characters)
                if (searchValue.length === 8 && /^[A-Z0-9]+$/.test(searchValue.toUpperCase())) {
                    // Search by friend code
                    const usersSnapshot = await db.collection('users').get();
                    
                    for (const doc of usersSnapshot.docs) {
                        if (generateFriendCode(doc.id) === searchValue.toUpperCase()) {
                            userDoc = doc;
                            break;
                        }
                    }
                } else {
                    // Search by username
                    const usersSnapshot = await db.collection('users')
                        .where('name', '==', searchValue)
                        .limit(1)
                        .get();
                    
                    if (!usersSnapshot.empty) {
                        userDoc = usersSnapshot.docs[0];
                    }
                }
                
                if (userDoc && userDoc.id !== currentUser.uid) {
                    const user = userDoc.data();
                    
                    resultsDiv.innerHTML = `
                        <div style="background: rgba(255, 255, 255, 0.05); padding: 15px; border-radius: 15px; display: flex; align-items: center; justify-content: space-between;">
                            <div style="display: flex; align-items: center; gap: 15px;">
                                <div style="font-size: 2rem;">${user.avatar || 'üòé'}</div>
                                <div>

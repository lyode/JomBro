        // Generate friend code
        function generateFriendCode(uid) {
            // Simple hash function to generate 8-character code
            let hash = 0;
            for (let i = 0; i < uid.length; i++) {
                const char = uid.charCodeAt(i);
                hash = ((hash << 5) - hash) + char;
                hash = hash & hash;
            }
            
            return Math.abs(hash).toString(36).toUpperCase().padEnd(8, '0').substring(0, 8);
        }

        // Share my code
        function shareMyCode() {
            const code = generateFriendCode(currentUser.uid);
            const text = `My JomBro friend code: ${code}`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'JomBro Friend Code',
                    text: text
                }).catch(err => {
                    if (err.name !== 'AbortError') {
                        copyToClipboard(text);
                    }
                });
            } else {
                copyToClipboard(text);
            }
        }

        // Copy to clipboard
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text);
            showMessage('Copied to clipboard! üìã', 'success');
